<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminMaintainProducts"
    android:layout_marginTop="20sp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:elevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardimage_maintain"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/pprice_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pname_maintain"
            android:layout_margin="5dp"
            android:layout_marginTop="2sp"
            android:background="@drawable/rectwhite"
            android:gravity="center"
            android:hint="Product price"
            android:padding="10dp"
            android:textColor="@color/pink"
            android:textSize="10sp"

            />

        <EditText
            android:id="@+id/pname_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardimage_maintain"
            android:layout_margin="5dp"
            android:background="@drawable/rectwhite"
            android:gravity="center"
            android:hint="Product Name"
            android:padding="10dp"
            android:textColor="@color/pink"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/pdecs_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pprice_maintain"
            android:layout_margin="5dp"
            android:layout_marginTop="2sp"
            android:background="@drawable/rectwhite"
            android:gravity="center"
            android:hint="Product Description"
            android:padding="10dp"
            android:textColor="@color/pink"
            android:textSize="10sp" />

        <Button
            android:id="@+id/apply_changes"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_below="@id/pdecs_maintain"
            android:layout_margin="5dp"
            android:layout_marginTop="2sp"
            android:background="@drawable/rectangl"
            android:gravity="center"
            android:padding="12dp"
            android:text="Apply Changes"
            android:textAllCaps="false"
            android:textColor="@color/darkblue"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Remove"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_below="@id/apply_changes"
            android:layout_margin="30sp"

            android:background="@drawable/rectangl"
            android:gravity="center"
            android:padding="10dp"
            android:text="Remove this Product"
            android:textAllCaps="false"
            android:textColor="@color/darkblue"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>